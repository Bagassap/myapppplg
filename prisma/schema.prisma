generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
  role     Role    @default(SISWA)
  name     String?
  username String? @unique


}

model DataGuru {
  id     Int    @id @default(autoincrement())
  userId String @unique
}

model DataSiswa {
  id             Int     @id @default(autoincrement())
  userId         String  @unique
  kelas          String
  tempatPKL      String?
  guruPembimbing String?

  absensi Absensi[]
}

model Absensi {
  id          Int       @id @default(autoincrement())
  userId      String

  tanggal     DateTime  @default(now())
  tipe        String
  status      String
  keterangan  String?
  kegiatan    String?
  foto        String?
  lokasi      String?
  waktu       String?
  bukti       String?
  tandaTangan String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  dataSiswa DataSiswa @relation(fields: [userId], references: [userId])

  @@unique([userId, tanggal, tipe])
}

model Informasi {
  id        Int      @id @default(autoincrement())
  judul     String
  isi       String   @db.Text
  tanggal   String   
  kategori  String   
  tipe      String   @default("umum") 
  tempatPKL String?  
  createdAt DateTime @default(now())

  komentar  Komentar[]
  laporan   LaporanMasalah[]
}

model Komentar {
  id          Int       @id @default(autoincrement())
  informasiId Int
  nama        String    
  isi         String    @db.Text
  tanggal     String    
  createdAt   DateTime  @default(now())

  informasi   Informasi @relation(fields: [informasiId], references: [id], onDelete: Cascade)
}

model LaporanMasalah {
  id          Int       @id @default(autoincrement())
  informasiId Int
  judul       String
  deskripsi   String    @db.Text
  createdAt   DateTime  @default(now())

  informasi   Informasi @relation(fields: [informasiId], references: [id], onDelete: Cascade)
}

enum Role {
  ADMIN
  GURU
  SISWA
}