generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
  role     Role    @default(SISWA)
  name     String?
  username String? @unique


}

model DataGuru {
  id     Int    @id @default(autoincrement())
  userId String @unique
}

model DataSiswa {
  id             Int     @id @default(autoincrement())
  userId         String  @unique
  kelas          String
  tempatPKL      String?
  guruPembimbing String?

  absensi Absensi[]
}

model Absensi {
  id          Int       @id @default(autoincrement())
  userId      String

  tanggal     DateTime  @default(now())
  tipe        String
  status      String
  keterangan  String?
  kegiatan    String?
  foto        String?
  lokasi      String?
  waktu       String?
  bukti       String?
  tandaTangan String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  dataSiswa DataSiswa @relation(fields: [userId], references: [userId])

  @@unique([userId, tanggal, tipe])
}

enum Role {
  ADMIN
  GURU
  SISWA
}